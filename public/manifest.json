{
  "manifest_version": 3,

  "name": "Gamodoro",
  "description": "Gamified Pomodoro timer with streak, points multiplier, leaderboard, and more",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Basic Chrome Extension"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "contextMenus"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
