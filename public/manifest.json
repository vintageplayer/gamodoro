{
  "manifest_version": 3,

  "name": "Gamodoro",
  "description": "Gamified Pomodoro timer with streak, points multiplier, leaderboard, and more",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "notifications"
  ]
}
