{
  "manifest_version": 3,

  "name": "Gamodoro",
  "description": "Gamified Pomodoro timer with streak, points multiplier, leaderboard, and more",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "action": {
    "default_icon": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },

  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "notifications",
    "tabs",
    "offscreen"
  ],

  "web_accessible_resources": [{
    "resources": ["phaseComplete.html", "offscreen.html", "images/*", "audio/*"],
    "matches": ["chrome-extension://*/*"]
  }]
}
